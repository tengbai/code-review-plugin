<idea-plugin>
    <id>practice.code-review-plugin</id>
    <vendor email="baiyejianxin@126.com" url="">Page</vendor>


    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Code Review"
                    icon="/img/code-review.png"
                    anchor="bottom"
                    factoryClass="com.page.plugin.CodeReviewToolWindowFactory">
        </toolWindow>
    </extensions>

    <actions>
        <action id="action.CodeSelectAction" class="action.CodeSelectAction" text="Add Comment">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
